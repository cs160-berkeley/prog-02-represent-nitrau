<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/rp_ca_13_lee_barbara"
        android:layout_centerHorizontal="true"
        android:id="@+id/slide_portrait"
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <TextView
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/slide_type"
        android:layout_below="@+id/slide_portrait"
        android:text="Representative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/slide_type"
        android:id="@+id/slide_name_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12dp"
            android:id="@+id/slide_name"
            android:text="Barbara Lee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12dp"
            android:id="@+id/slide_party"
            android:textColor="@color/democratic"
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12dp"
            android:text=")"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/slide_name_layout"
        android:orientation="horizontal"
        android:id="@+id/email_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12dp"
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12dp"
            android:id="@+id/slide_email"
            android:text="someemail@gmail.com"
            android:textColor="@color/democratic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/website_layout"
        android:layout_below="@id/email_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12dp"
            android:text="@string/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12dp"
            android:id="@+id/slide_website"
            android:text="lee.house.gov"
            android:textColor="@color/democratic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/slide_tweet"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rbltweet"
        android:layout_below="@+id/website_layout"
        android:layout_width="wrap_content"
        android:layout_height="120dp" />

    <TextView
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="onDetail"
        android:clickable="true"
        android:textColor="@color/democratic"
        android:text="More>>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>